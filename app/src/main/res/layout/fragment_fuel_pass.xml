<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gazprom_common_silver_background"
    android:orientation="vertical"
    tools:context="org.ravenlabs.fuelpass.FuelPassFragment">

    <TextView
        style="@style/TextViewGazprom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/fuelprice_textview"
        android:textSize="34dp" />

    <EditText
        android:id="@+id/txt_fuel_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:numeric="decimal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewGazprom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discount_textview"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/txt_discount"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:numeric="decimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                style="@style/TextViewGazprom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fuel_type_textview"
                android:textSize="24dp" />

            <Spinner
                android:id="@+id/spin_fuel_type"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/TextViewGazprom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/amount_textview"
        android:textSize="34dp" />

    <EditText
        android:id="@+id/txt_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:numeric="decimal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_refresh"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_action_autorenew" />

        <TextView
            android:id="@+id/txt_result"
            style="@style/TextViewGazprom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34dp" />

        <TextView
            style="@style/TextViewGazprom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="liters"
            android:textSize="34dp" />
    </LinearLayout>
</LinearLayout>
